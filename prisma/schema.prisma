// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  MANAGER
  DRIVER
}

enum VehicleStatus {
  ACTIVE
  INACTIVE
  MAINTENANCE
  RETIRED
}

enum ReminderStatus {
  PENDING
  SENT
  FAILED
}

enum ReminderChannel {
  EMAIL
  SMS
}

enum SubscriptionStatus {
  TRIAL
  ACTIVE
  CANCELED
  PAST_DUE
  UNPAID
}

model Company {
  id                   String   @id @default(cuid())
  name                 String
  stripeCustomerId     String?  @unique
  stripeSubscriptionId  String?  @unique
  subscriptionStatus   SubscriptionStatus @default(TRIAL)
  subscriptionPlanId   String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  users            User[]
  vehicles         Vehicle[]
  maintenanceTemplates MaintenanceTemplate[]
  maintenanceSchedules MaintenanceSchedule[]
  serviceEvents    ServiceEvent[]
  reminders        Reminder[]
  reminderSettings ReminderSettings?
  subscription     Subscription?

  @@map("companies")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      UserRole @default(DRIVER)
  companyId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  assignedVehicles Vehicle[] @relation("VehicleDriver")

  @@map("users")
}

model Vehicle {
  id              String         @id @default(cuid())
  make            String
  model           String
  year            Int
  vin             String?        @unique
  licensePlate    String?
  currentOdometer Int            @default(0)
  inServiceDate   DateTime?
  status          VehicleStatus  @default(ACTIVE)
  companyId       String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  drivers User[] @relation("VehicleDriver")

  maintenanceSchedules MaintenanceSchedule[]
  serviceEvents         ServiceEvent[]
  reminders             Reminder[]

  @@index([companyId, status])
  @@index([companyId, createdAt])
  @@map("vehicles")
}

model MaintenanceTemplate {
  id            String   @id @default(cuid())
  name          String
  description   String?
  intervalMonths Int?
  intervalMiles  Int?
  checklistItems String[] // Array of checklist item strings
  isBuiltIn     Boolean  @default(false)
  companyId     String?  // null for built-in templates
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  company Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)

  maintenanceSchedules MaintenanceSchedule[]
  serviceEvents         ServiceEvent[]

  @@map("maintenance_templates")
}

model MaintenanceSchedule {
  id                String   @id @default(cuid())
  vehicleId         String
  templateId        String
  lastServiceDate   DateTime?
  lastServiceOdometer Int?
  nextDueDate       DateTime?
  nextDueOdometer   Int?
  companyId         String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  vehicle  Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  template MaintenanceTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  company  Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  reminders Reminder[]

  @@unique([vehicleId, templateId])
  @@index([companyId, nextDueDate])
  @@index([companyId, vehicleId])
  @@map("maintenance_schedules")
}

model ServiceEvent {
  id                String   @id @default(cuid())
  vehicleId         String
  templateId        String
  performedBy       String?
  performedAt       DateTime @default(now())
  odometerAtService Int
  notes             String?
  checklistCompleted Boolean @default(false)
  companyId         String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  vehicle  Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  template MaintenanceTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  company  Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId, vehicleId])
  @@index([companyId, performedAt])
  @@map("service_events")
}

model Reminder {
  id                String          @id @default(cuid())
  vehicleId         String
  scheduleId        String
  dueDate           DateTime
  channel           ReminderChannel
  status            ReminderStatus  @default(PENDING)
  sentAt            DateTime?
  companyId         String
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  vehicle  Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  schedule MaintenanceSchedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  company  Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId, status])
  @@index([companyId, dueDate])
  @@index([scheduleId])
  @@map("reminders")
}

model ReminderSettings {
  id        String          @id @default(cuid())
  companyId String          @unique
  email     String?
  phone     String?
  channel   ReminderChannel @default(EMAIL)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("reminder_settings")
}

model Plan {
  id                String   @id @default(cuid())
  stripePriceId     String   @unique
  name              String
  description       String?
  price             Int      // Price in cents
  interval          String   // "month" or "year"
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  subscriptions Subscription[]

  @@map("plans")
}

model Subscription {
  id                String            @id @default(cuid())
  companyId         String            @unique
  planId            String
  stripeSubscriptionId String?        @unique
  status            SubscriptionStatus @default(TRIAL)
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  cancelAtPeriodEnd  Boolean          @default(false)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  plan    Plan    @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}


